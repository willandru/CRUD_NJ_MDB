<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center jojo">
            <div class="card-header">
                <h1 style="color: black;">Account Login</h1>
            </div>
            <img src="/img/kali2.png" class="rounded-circle mx-auto d-block m-4 logo" alt="Logo kali linux">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control yolo" name="email" placeholder="Email" >
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password"  placeholder="Password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>